{
  "name": "next-app-bp",
  "description": "A NextJS boilerplate with ESLint, Prettier, and Husky pre-configured",
  "scripts": {
    "build": "next build",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "dev": "next dev",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,json,md,mdx}",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "next start",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest ./__tests__/unit",
    "test:e2e": "start-server-and-test dev 3000 cypress:run"
  },
  "dependencies": {
    "next": "12.1.0",
    "next-seo": "^5.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "12.1.4",
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "autoprefixer": "^10.4.2",
    "cypress": "9.5.2",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "12.3.5",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.18",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/princejoogie/next-app-bp.git"
  },
  "keywords": [
    "nextjs",
    "nodejs",
    "react",
    "boilerplate",
    "eslint",
    "prettier",
    "husky"
  ],
  "author": "Prince Carlo Juguilon",
  "license": "MIT"
}
