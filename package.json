{
  "name": "next-app-bp",
  "description": "A NextJS boilerplate with ESLint, Prettier, and Husky pre-configured",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,json,md,mdx}",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.0",
    "@types/react": "17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.5",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/princejoogie/next-app-bp.git"
  },
  "keywords": [
    "nextjs",
    "nodejs",
    "react",
    "boilerplate",
    "eslint",
    "prettier",
    "husky"
  ],
  "author": "Prince Carlo Juguilon",
  "license": "MIT"
}
