{
  "name": "next-app-bp",
  "description": "A NextJS boilerplate with ESLint, Prettier, and Husky pre-configured",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,json,md,mdx}",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "next": "^12.0.10",
    "next-seo": "^5.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.0",
    "lint-staged": "^12.3.3",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "tailwindcss": "^3.0.18",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/princejoogie/next-app-bp.git"
  },
  "keywords": [
    "nextjs",
    "nodejs",
    "react",
    "boilerplate",
    "eslint",
    "prettier",
    "husky"
  ],
  "author": "Prince Carlo Juguilon",
  "license": "MIT"
}
